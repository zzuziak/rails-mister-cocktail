<div class="container">

  <h2>Create your own cocktail!</h2>
  <%= simple_form_for @cocktail do |f| %>
    <%= f.input :name, class:"form-control" %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <br>
    <%= f.submit "Create the cocktail!", class:"btn btn-info" %>
  <% end %>
</div>
